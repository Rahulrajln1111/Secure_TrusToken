<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBackground"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section 1: Sign Text (Yellow Background) -->
        <LinearLayout
            android:id="@+id/section_sign_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF9C4"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- Plain Text Input and Sign Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <EditText
                    android:id="@+id/plain_text"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="3"
                    android:layout_marginEnd="8dp"
                    android:hint="Enter the plain text"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:background="@drawable/edittext_bg" />
                <Button
                    android:id="@+id/sign"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Sign"
                    android:textSize="15sp"
                    android:background="@drawable/button_bg_blue"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- Signature Display -->
            <TextView
                android:id="@+id/signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:background="@drawable/bg_blue"
                android:hint="Signature"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textColor="@android:color/white" />

            <!-- Verify Button -->
            <Button
                android:id="@+id/verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:textSize="15sp"
                android:background="@drawable/button_bg_green"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Section 2: Encrypt Text (Light Blue Background) -->
        <LinearLayout
            android:id="@+id/section_encrypt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#BBDEFB"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encrypt Text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <EditText
                    android:id="@+id/plain_text2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="4"
                    android:layout_marginEnd="8dp"
                    android:hint="Enter the plain text"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:background="@drawable/edittext_bg" />
                <Button
                    android:id="@+id/encrypt"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:text="Encrypt"
                    android:textSize="16sp"
                    android:background="@drawable/button_bg_blue"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- Cipher Text Display -->
            <TextView
                android:id="@+id/cipher_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:background="@drawable/bg_blue"
                android:hint="Cipher text"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textColor="@android:color/white" />

            <!-- Decrypt Button -->
            <Button
                android:id="@+id/decrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decrypt"
                android:textSize="15sp"
                android:background="@drawable/button_bg_blue"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Section 3: Clear and Logout (Light Grey Background) -->
        <LinearLayout
            android:id="@+id/section_clear_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#EEEEEE"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/clear_token"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="Clear"
                android:textSize="15sp"
                android:background="@drawable/button_bg_blue"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="15sp"
                android:background="@drawable/button_bg_blue"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- Section 4: File Signing/Verification (Light Green Background) -->
        <LinearLayout
            android:id="@+id/section_file_signing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#C8E6C9"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File Signing / Verification"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnSelectOriginalFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Original File"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_blue"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnSelectSignatureFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Signature File"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_blue"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnVerifySignature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify Signature"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_green"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/Sign_doc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Doc"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_blue"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/share_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share Signature"
                android:textSize="15sp"
                android:background="@drawable/button_bg_blue"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Section 5: Send Encrypted Message (Light Purple Background) -->
        <LinearLayout
            android:id="@+id/section_send_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E1BEE7"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Encrypted Message"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edtIpAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter IP Address (e.g., 10.50.45.179)"
                android:padding="8dp"
                android:background="@drawable/edittext_bg"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/edtPort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Port (e.g., 4444)"
                android:inputType="number"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_bg"
                android:textColor="@android:color/white"/>

            <EditText
                android:id="@+id/edtMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type your message"
                android:inputType="text"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_bg"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Encrypted Message"
                android:textSize="15sp"
                android:background="@drawable/button_bg_blue"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Section 6: Decrypt File (White Background) -->
        <LinearLayout
            android:id="@+id/section_decrypt_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decrypt File"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnSelectEncryptedFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Encrypted File"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_blue"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnDecryptFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decrypt File"
                android:textColor="@android:color/white"
                android:background="@drawable/button_bg_blue"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvDecryptedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decrypted Text will appear here"
                android:textSize="16sp"
                android:padding="10dp"
                android:background="@drawable/bg_blue"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
